generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  nome      String
  matricula String
  curso     String

  requests Request[]

  @@unique([matricula])
  @@map("users")
}

model Request {
  id      String  @id @default(uuid())
  cor     String
  tamanho String  @db.VarChar(2)
  pay     Boolean @default(false)
  user_id String

  user User @relation(fields: [user_id], references: [id])

  @@map("requests")
}
